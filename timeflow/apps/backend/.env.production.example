# TimeFlow Backend Production Environment Configuration
# Copy this to .env.production and fill in actual values

# Node Environment
NODE_ENV=production

# Server Configuration
# PORT is auto-assigned by Render, leave unset
# PORT=10000

# Database Configuration
# CRITICAL: Use Session pooler (port 5432) for persistent server applications like Fastify
# Do NOT use Transaction pooler (port 6543) - that's only for serverless/short-lived connections
# Username format must include project reference: postgres.PROJECT_REF
DATABASE_URL=postgresql://postgres.yjlzufkxlksqmqdszxrs:PASSWORD@aws-1-us-east-1.pooler.supabase.com:5432/postgres

# Session & Security
SESSION_SECRET=your-48-character-session-secret-here
ENCRYPTION_KEY=your-64-character-encryption-key-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://timeflow-wosj.onrender.com/api/auth/google/callback

# Frontend URL
APP_BASE_URL=https://timeflow.vercel.app

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
